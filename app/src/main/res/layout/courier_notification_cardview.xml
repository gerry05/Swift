<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/client_notification_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:background="#000000"
    android:elevation="15dp"
    app:cardCornerRadius="2dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/client_notification_profile_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/client_notification_message_txtVw"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/people_icon" />

        <TextView
            android:id="@+id/client_notification_message_txtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:layout_toEndOf="@+id/client_notification_profile_icon"
            android:text="Message"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/client_notification_date_txtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/client_notification_message_txtVw"
            android:layout_toEndOf="@+id/client_notification_profile_icon"
            android:text="Date" />

        <Button
            android:id="@+id/client_notification_rateFeedback_btn"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/client_notification_profile_icon"
            android:visibility="gone"
            android:text="give rate and feedback"/>




    </RelativeLayout>

</android.support.v7.widget.CardView>

