<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
    tools:context="app.swift.SignInEnterPinCode">

    <com.goodiebag.pinview.Pinview
        android:id="@+id/pinView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        app:pinWidth="40dp"
        app:pinHeight="40dp"
        app:pinLength="4"
        app:cursorVisible="true"
        app:forceKeyboard="true"
        app:hint="0"
        app:inputType="number"
        app:password="true"
        />

    <TextView
        android:id="@+id/sign_in_enter_pincode_txtVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pinView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:text="Enter Pin Code"
        android:textColor="@color/WhiteColor"
        android:textSize="18sp" />



    <ImageView
        android:id="@+id/sign_in_enter_pincode_icon"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_above="@+id/sign_in_enter_pincode_txtVw"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/pincode_icon" />



</RelativeLayout>
