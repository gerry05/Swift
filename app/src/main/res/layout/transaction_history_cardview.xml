<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/courier_transaction_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="#000000"
    android:elevation="15dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/transaction_cardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/courier_transaction_history_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/courier_transaction_history_amount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            app:layout_constraintStart_toStartOf="@+id/courier_transaction_history_name_label"
            app:layout_constraintTop_toBottomOf="@+id/courier_transaction_history_name_label" />

        <TextView
            android:id="@+id/courier_transaction_history_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/courier_transaction_history_amount_label"
            app:layout_constraintTop_toBottomOf="@+id/courier_transaction_history_amount_label" />

        <TextView
            android:id="@+id/courier_transaction_history_date_txtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="Date"
            android:textColor="@android:color/black"
            app:layout_constraintBaseline_toBaselineOf="@+id/courier_transaction_history_date_label"
            app:layout_constraintStart_toEndOf="@+id/courier_transaction_history_date_label" />





        <TextView
            android:id="@+id/courier_transaction_history_name_txtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@android:color/black"
            app:layout_constraintBaseline_toBaselineOf="@+id/courier_transaction_history_name_label"
            app:layout_constraintStart_toStartOf="@+id/courier_transaction_history_date_txtVw" />

        <TextView
            android:id="@+id/courier_transaction_history_amount_txtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚±"
            android:textColor="@android:color/black"
            app:layout_constraintBaseline_toBaselineOf="@+id/courier_transaction_history_amount_label"
            app:layout_constraintStart_toStartOf="@+id/courier_transaction_history_name_txtVw" />

        <Button
            android:id="@+id/courier_transaction_history_view_btn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@android:color/transparent"
            android:text="View"
            android:textColor="@color/BlueColor"
            app:layout_constraintBaseline_toBaselineOf="@+id/courier_transaction_history_name_txtVw"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

