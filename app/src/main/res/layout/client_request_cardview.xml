<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/client_requests_cardView"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="18dp"
    android:background="#000000"
    android:elevation="15dp"
    app:cardCornerRadius="2dp"
    >

    <RelativeLayout
        android:id="@+id/requestLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        >

        <ImageView
            android:id="@+id/courier_request_profile_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="fitCenter"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            app:srcCompat="@drawable/people_icon" />

        <TextView
            android:id="@+id/courier_name_txtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/courier_request_profile_icon"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/courier_request_profile_icon"
            android:text="Name"
            android:textColor="@color/BlueColor"
            android:textSize="18sp" />
        <!--<TextView-->
            <!--android:id="@+id/courier_viewProfile_txtVw"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignTop="@+id/courier_request_profile_icon"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:text="View Profile"-->
            <!--android:textColor="@color/BlueColor"-->
            <!--android:textSize="18sp" />-->


        <RatingBar
            android:id="@+id/client_request_rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courier_name_txtVw"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:isIndicator="true"
            android:layout_toEndOf="@+id/courier_request_profile_icon" />



        <TextView
            android:id="@+id/client_request_time_txtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/client_request_rating_bar"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/courier_request_profile_icon"
            android:text="Date" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >

            <Button
                android:id="@+id/courier_request_hire_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:background="@drawable/ripple_effect_green_bg"
                android:text="Hire"
                android:textAllCaps="false"
                android:textColor="@color/WhiteColor"
                android:textSize="18sp" />
            <Button
                android:id="@+id/courier_request_decline_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"

                android:background="@drawable/ripple_effect_red_bg"
                android:text="Decline"
                android:textAllCaps="false"
                android:textColor="@color/WhiteColor"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="241dp"
                tools:layout_editor_absoluteY="177dp" />






        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>

