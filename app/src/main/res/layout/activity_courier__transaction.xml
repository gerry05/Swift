<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.swift.Courier_Transaction">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <android.support.constraint.ConstraintLayout
            android:id="@+id/client_post_layout"
            android:layout_width="match_parent"
            android:background="@color/FormColor"
            android:layout_height="match_parent"
            android:paddingBottom="100dp">
            <TextView
                android:id="@+id/clientPost_post_txtVw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:text="Transaction"
                android:textColor="@color/BackgroundColor"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/clientPost_status_txtVw" />

            <TextView
                android:id="@+id/clientPost_status_txtVw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="70dp"
                android:text="Status:None"
                android:textColor="@color/BackgroundColor"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="100dp"
                android:visibility="visible"
                android:background="@color/WhiteColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/clientPost_profile_icon"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/temporary_profile" />

                <TextView
                    android:id="@+id/clientPost_name_txtVw"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:text="Name"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/clientPost_profile_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/clientPost_title_txtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/clientPost_name_txtVw"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_name_txtVw" />

                <TextView
                    android:id="@+id/clientPost_pay_txtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="You will pay"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/clientPost_profile_icon"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_profile_icon" />

                <TextView
                    android:id="@+id/clientPost_money_txtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="â‚±15"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/clientPost_pay_txtVw"
                    app:layout_constraintStart_toStartOf="@+id/clientPost_pay_txtVw"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_pay_txtVw" />

                <TextView
                    android:id="@+id/clientPost_distance_txtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="60dp"
                    android:text="Distance"
                    app:layout_constraintBaseline_toBaselineOf="@+id/clientPost_pay_txtVw"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/clientPost_kilometer_txtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="1km"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/clientPost_money_txtVw"
                    app:layout_constraintEnd_toEndOf="@+id/clientPost_distance_txtVw"
                    app:layout_constraintStart_toStartOf="@+id/clientPost_distance_txtVw" />

                <TextView
                    android:id="@+id/clientPost_vehicle_txtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Vehicle"
                    app:layout_constraintStart_toStartOf="@+id/clientPost_pay_txtVw"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_money_txtVw" />

                <TextView
                    android:id="@+id/clientPost_vehicle_txtVw2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Vehicle"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/clientPost_vehicle_txtVw"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_vehicle_txtVw" />

                <TextView
                    android:id="@+id/clientPost_pickup_txtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Pick up location"
                    app:layout_constraintStart_toStartOf="@+id/clientPost_vehicle_txtVw"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_vehicle_txtVw2" />

                <TextView
                    android:id="@+id/clientPost_pickup_location_txtVw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:text="Address"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_pickup_txtVw" />

                <TextView
                    android:id="@+id/clientPost_dropoff_txtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:text="Drop off location"
                    app:layout_constraintStart_toStartOf="@+id/clientPost_pickup_location_txtVw"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_pickup_location_txtVw" />

                <TextView
                    android:id="@+id/clientPost_dropoff_location_txtVw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/clientPost_pickup_location_txtVw"
                    app:layout_constraintStart_toStartOf="@+id/clientPost_dropoff_txtVw"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_dropoff_txtVw" />

                <TextView
                    android:id="@+id/clientPost_documentype_txtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:text="Type of Document"
                    app:layout_constraintStart_toStartOf="@+id/clientPost_dropoff_location_txtVw"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_dropoff_location_txtVw" />

                <TextView
                    android:id="@+id/clientPost_documentype1_txtVw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Document Name"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/clientPost_dropoff_location_txtVw"
                    app:layout_constraintStart_toStartOf="@+id/clientPost_dropoff_location_txtVw"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_documentype_txtVw" />

                <TextView
                    android:id="@+id/clientPost_receiver_txtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:text="Receiver's name"
                    app:layout_constraintStart_toStartOf="@+id/clientPost_documentype1_txtVw"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_documentype1_txtVw" />

                <TextView
                    android:id="@+id/clientPost_receover1_txtVw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/clientPost_documentype1_txtVw"
                    app:layout_constraintStart_toStartOf="@+id/clientPost_documentype1_txtVw"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_receiver_txtVw" />

                <TextView
                    android:id="@+id/clientPost_instructions_txtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Instructions"
                    app:layout_constraintStart_toStartOf="@+id/clientPost_receover1_txtVw"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_receover1_txtVw" />

                <TextView
                    android:id="@+id/clientPost_instructions1_txtVw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Instructions"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/clientPost_receover1_txtVw"
                    app:layout_constraintStart_toStartOf="@+id/clientPost_receover1_txtVw"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_instructions_txtVw" />

                <Button
                    android:id="@+id/courier_view_client_transaction_going_btn"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@drawable/going_button"
                    android:text="Going"
                    android:layout_marginTop="15dp"
                    android:textAllCaps="false"
                    android:textColor="@color/WhiteColor"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_instructions1_txtVw"
                    app:layout_constraintEnd_toStartOf="@+id/courier_view_client_transaction_dropoff_btn"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout4" />

                <Button
                    android:id="@+id/courier_view_client_transaction_dropoff_btn"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@drawable/dropoff_button"
                    android:text="Drop off"
                    android:textAllCaps="false"
                    android:textColor="@color/WhiteColor"
                    android:textSize="18sp"
                    android:enabled="false"
                    app:layout_constraintTop_toBottomOf="@+id/clientPost_instructions1_txtVw"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/courier_view_client_transaction_going_btn"
                    app:layout_constraintTop_toTopOf="@+id/courier_view_client_transaction_going_btn" />

            </android.support.constraint.ConstraintLayout>



        </android.support.constraint.ConstraintLayout>



    </ScrollView>

    <fragment
        android:id="@+id/top_section_fragment"
        android:name="app.swift.CourierTopSectionFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        tools:layout="@layout/activity_courier_top_section_fragment" />

    <RelativeLayout
        android:id="@+id/noPost_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="No Transaction"
            android:textSize="50dp"
            android:id="@+id/textView" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/courier_bottomNavView_Bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_grey_border_top"
            app:itemIconTint="@color/bottom_navigation_item_foreground"
            app:itemTextColor="@color/bottom_navigation_item_foreground"
            app:menu="@menu/courier_bottom_navigation_menu">


        </android.support.design.widget.BottomNavigationView>

    </RelativeLayout>
</RelativeLayout>
